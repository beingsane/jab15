<?xml version="1.0" encoding="UTF-8"?>
<form validate="true" type="read" cssfiles="media://com_jab15/css/common.css,media://com_jab15/css/frontend.css">
	<fieldset name="header">
		<field name="title" type="Text" label_placement="none" class="title"/>
	</fieldset>
	<fieldset name="dates" class="form form-horizontal">
		<field name="room" type="Text" label="COM_JAB15_SESSIONS_ROOM_LBL"/>
		<field name="start_datetime"
			   type="Calendar"
			   label="COM_JAB15_SESSIONS_START_DATETIME_LBL"
			   disabled="true"
			   format="%Y/%m/%d %H:%M"/>
		<field name="end_datetime"
			   type="Calendar"
			   label="COM_JAB15_SESSIONS_END_DATETIME_LBL"
			   disabled="true"
			   format="%Y/%m/%d %H:%M"/>
		<field name="user_id" type="User" label="COM_JAB15_SESSIONS_USER_ID_LBL" />
	</fieldset>
	<fieldset name="description" class="well">
		<field name="description" type="Editor" label_placement="none"/>
	</fieldset>
</form>
